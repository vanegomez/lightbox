  <div class="user_post">
    <div class="user_profile">
    <h1><span class="user"><%= current_user.nickname %></span></h1>

      <ul>
        <li><%= current_user.counts.media %> posts</li>
        <li><%= current_user.counts.followed_by %> followers</li>
        <li><%= current_user.counts.follows %> following</li>
      </ul>
    </div>
    <div class="image">
      <% current_user.recent_media.each do |image| %>
        <%= image_tag image.images.low_resolution.url %>
      <% end %>
    </div>
  </div>


